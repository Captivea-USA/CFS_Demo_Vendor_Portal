<odoo>
    <data>

        <!--Email template -->
        <record id="email_template_edi_selller_rfq" model="mail.template">
            <field name="name">Vendor RFQ - Send by Email</field>
            <field name="email_from">{{ (object.user_id.email_formatted or user.email_formatted or '') }}</field>
            <field name="email_to">{{ (ctx.get('wkemail') and '"%s" &lt;%s&gt;' % (ctx['wkname'], ctx['wkemail']) or '') }}</field>
            <field name="subject">RFQ Request</field>
            <field name="model_id" ref="odoo_vendor_portal.model_vendor_rfq"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang"></field>
            <field name="body_html" type="html">
                <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                    <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
                        <tbody>
                            <tr>
                                <td valign="center" width="200" style="padding:10px 10px 10px 5px;font-size: 12px">
                                    <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="object.company_id.name"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                    <p>Dear <t t-out="ctx['wkname']"/>,</p>
                    <p>
                        We would like to request a quotation <strong><t t-out="object.name"/></strong>
                        of <strong><t t-out="object.prod_qty"/></strong> units of the Product
                        <t t-if="object.product_id">
                            (<strong><t t-out="object.product_id.name"/></strong>)
                        </t>
                        from you.
                    </p>
                    <p>
                        <t t-if="ctx.get('wkDate')">
                            Our expected date of delivery is <strong><t t-out="ctx['wkDate']"/></strong>.
                        </t>
                    </p>
                    <p>
                        If interested, please visit the link below and let us know the quote.
                    </p>
                    <div style="text-align: center; margin-top: 16px;">
                        <a t-att-href="ctx['redirectUrl']" style="padding: 5px 10px; font-size: 12px; line-height: 18px; color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B; border: 1px solid #875A7B; border-radius:3px">View RFQ Details</a>
                    </div>
                    <p>Thank you,</p>
                </div>
                <div style="padding:0px;width:600px;margin:auto; margin-top: 10px; background: #fff repeat top /100%;color:#777777">
                    <t t-out="object.user_id.signature or ''"/>
                    <p style="font-size: 11px; margin-top: 10px;">
                        <strong>Sent by <t t-out="object.user_id.company_id.name"/> using <a href="www.odoo.com" style="text-decoration:none; color: #875A7B;">Odoo</a>
                        </strong>
                    </p>
                </div>
            </field>
        </record>

        <record id="email_template_edi_rfq_done" model="mail.template">
            <field name="name">Vendor RFQ Done - Send by Email</field>
            <field name="email_from">{{ (object.user_id.email_formatted or user.email_formatted or '') }}</field>
            <field name="email_to">{{ (ctx.get('wkemail') and '"%s" &lt;%s&gt;' % (ctx['wkname'], ctx['wkemail']) or '') }}</field>
            <field name="subject">Proposed quotation accepted</field>
            <field name="model_id" ref="odoo_vendor_portal.model_vendor_rfq"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang"></field>
            <field name="body_html" type="html">
                <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                    <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
                        <tbody>
                            <tr>
                                <td valign="center" width="200" style="padding:10px 10px 10px 5px;font-size: 12px">
                                    <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="object.company_id.name"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                    <p>Dear <t t-out="ctx['wkname']"/>,</p>
                    <p>
                        We would like to tell you that we accept your quoted amount <strong><t t-out="object.currency_id.name"/></strong>
                        <strong><t t-out="ctx['wkprice']"/></strong>
                        for the requested product <strong><t t-out="object.product_id.name"/></strong>
                        <t t-if="ctx['wkDate']">
                            within your specified delivery date <strong><t t-out="ctx['wkDate']"/></strong>
                        </t>
                        from you.
                    </p>
                    <p>
                        Hence, we would like to purchase <strong><t t-out="object.prod_qty"/></strong> units of <strong><t t-out="object.product_id.name"/></strong> from you by estimated date.
                    </p>
                    <p>
                        We will soon create a purchase order for you regarding the same.
                    </p>
                    <p>Thank you,</p>
                </div>
                <div style="padding:0px;width:600px;margin:auto; margin-top: 10px; background: #fff repeat top /100%;color:#777777">
                    <t t-out="object.user_id.signature"/>
                    <p style="font-size: 11px; margin-top: 10px;">
                        <strong>Sent by <t t-out="object.user_id.company_id.name"/> using <a href="www.odoo.com" style="text-decoration:none; color: #875A7B;">Odoo</a>
                        </strong>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
